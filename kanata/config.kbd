(defsrc
    caps [ spc i j k l
)
(defvar
  tap-timeout   01
  hold-timeout  145
  tt $tap-timeout
  ht $hold-timeout
)

(defalias
    escctrl (tap-hold $tt $ht esc lctrl)
)
(defalias
    bracketctrl (tap-hold $tt $ht [ lctrl)
)

(defalias
  spacewin(tap-hold $tt $ht spc lmeta)
)
(defalias
iup (tap-hold $tt $ht i up)
)
(defalias
jleft(tap-hold $tt $ht j lft)
)
(defalias
kdown (tap-hold $tt $ht k down)
)

(defalias
lright (tap-hold $tt $ht l rght)
)






(deflayer base
    @escctrl
	@bracketctrl
	@spacewin
	@iup
	@jleft
	@kdown
	@lright
)
